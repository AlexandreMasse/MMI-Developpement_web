{% embed 'base.html.twig' with {title : article.title} %}

    {% block body %}
        <h2><a href="{{ path('article_list') }}"> Revenir </a></h2>
        
        {{ article.title }}
        {{ article.text }}
        {{ article.author.login }}
        {{ article.createdAt | date("d/m/Y")}}

        <hr>
        {# Si l'utilisateur est connect√© #}
        {% if app.user %}


            <form action="{{ path('comment_new', {'slug': article.slug}) }}" method="post">
                <div class="form-group">
                    <label for="com">Commentaire</label>
                    <textarea class="form-control" name="commentaire" id="com"{# cols="30" rows="10"#} placeholder="Laissez votre commentaire"></textarea>
                </div>

                <button type="submit" class="btn btn-default">Publier commentaire</button>
            </form>

        {% endif %}


        {% for comment in article.commentaires | reverse %}
                {{ comment.author.login }}
                {{ comment.createdAt | date("d/m/Y - H:i:s")}}
                {{ comment.message }}
            <br>

        {% endfor %}
    {% endblock %}
{% endembed %}