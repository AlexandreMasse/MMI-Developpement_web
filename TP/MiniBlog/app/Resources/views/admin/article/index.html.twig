{# page de gestion des article par l'admin #}


{% embed "base.html.twig" %}
    {% block body %}
        {#<pre>{{ dump(articles) }}</pre>#}
        <h1>Les articles</h1>

        <a href="{{ path('admin_article_add') }}" class="btn btn-primary btn-addarticle">Ajouter un article</a>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Titre</th>
                    <th>Auteur</th>
                    <th>Date</th>
                    <th>Derni√®re modification</th>
                </tr>
            </thead>

            <tbody>
                {% for article in articles %}
                    <tr>
                        <td><a href="{{ path('article_show', {'slug': article.slug}) }}">{{ article.title }}</a></td>
                        <td>{{ article.author.login }}</td>
                        <td>{{ article.createdAt | date("d/m/Y - H:i:s") }}</td>
                        <td>{{ article.editedAt is empty ? "Aucune modification" : article.editedAt | date("d/m/Y - H:i:s")}}</td>
                        <td>
                            <a href="{{ path('admin_article_edit', {'id': article.id }) }}">Editer</a>
                            <a href="{{ path('admin_article_delete', {'id': article.id }) }}">Supprimer</a></td>
                    </tr>
                    
                {% endfor %}
            </tbody>
        </table>

    {% endblock %}
{% endembed %}