<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}MiniBlog - {{ title | default('Accueil') }}{% endblock %}</title>
        {% block stylesheets %}{% endblock %}

        {#Bootsrap#}
        <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">

        {#Font icone#}
        <link rel="stylesheet" href="{{ asset('font/flaticon.css') }}">
        <link rel="stylesheet" href="https://cdn.rawgit.com/konpa/devicon/master/devicon.min.css">

        {#Style perso#}
        <link rel="stylesheet" href="{{ asset('css/styles.css') }}">

        {#Favicon#}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

    </head>
    <body>

        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li><a href="{{ path('homepage') }}">Accueil</a></li>
                        {% if app.user %}
                            <li><a href="{{ path('logout') }}">Se déconnecter</a></li>
                            {% else %}
                                <li><a href="{{ path('login') }}">Se connecter</a></li>
                        {% endif %}

                            <li><a href="{{ path('article_list') }}">Voir tous les articles</a></li>

                        {% if is_granted("ROLE_ADMIN") %}
                            <li><a href="{{ path('admin_article_add') }}">Ajouter un article</a></li>
                            <li><a href="{{ path('admin_article_index') }}">Gérer les articles</a></li>
                        {% endif %}

                    </ul>
                </div>
            </div>
        </nav>

        <div class="container">

            {% block body %}{% endblock %}


        </div>


        <footer>
            <div>
            <span>Voir le code sur Github</span>
            <a class="flaticon-github-logo" href="https://github.com/AlexandreMasse/MMI-Developpement_web/tree/master/TP/MiniBlog" title="Voir le code sur Github"></a>
            <a href="#" class="devicon-symfony-original"></a>
            <span>Powered by Symfony</span>

            </div>
        </footer>



        <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>

        <script>
            'use strict';
            $(document).ready(function () {

                /*Anamation logo Github*/

                function entreeG () {
                    $('footer span:nth-of-type(1)').css('color', 'white')
                }
                function sortieG () {
                    $('footer span:nth-of-type(1)').css('color', '#4e5d6c')
                }

                $('.flaticon-github-logo').hover(entreeG, sortieG);



                /*Animation logo Symfony*/

                function entreeS () {
                    $('footer span:nth-of-type(2)').css('color', 'white')
                }

                function sortieS () {
                    $('footer span:nth-of-type(2)').css('color', '#4e5d6c')
                }

                $('.devicon-symfony-original').hover(entreeS, sortieS);


            });

        </script>

        {% block javascripts %}{% endblock %}

    </body>
</html>
